    },
    "ConsolePrivateInstallsDynamoDBTable" : {
      "Type" : "AWS::DynamoDB::Table",
      "DependsOn" : "ConsolePrivateRacksDynamoDBTable" ,
      "Properties" : {
        "TableName" : {"Fn::Join" : ["", [{"Ref": "TablePrefix"}, "-installs" ]]},
