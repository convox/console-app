          "Projection": { "ProjectionType": "ALL" },
          "KeySchema" : [
            { "AttributeName": "name", "KeyType": "HASH" }
          ],
          "ProvisionedThroughput" : { "ReadCapacityUnits" : "20", "WriteCapacityUnits" : "5" }
        },{
          "IndexName" : "organization-id-index",
          "Projection": { "ProjectionType": "ALL" },
          "KeySchema" : [
            { "AttributeName": "organization-id", "KeyType": "HASH" }
          ],
